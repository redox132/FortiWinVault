<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WinHashMe.Pages.Auth.AddPasswordPage"
             Title="AddPasswordPage">
    <VerticalStackLayout Padding="20" Spacing="15" VerticalOptions="Center" HorizontalOptions="Center" MinimumWidthRequest="500" Background="#eee">

        <Label Text="Add Password" HorizontalOptions="Center" FontAttributes="Bold" FontSize="Large" />
        <Entry x:Name="WebsiteEntry"
               Placeholder="Website" 
               BackgroundColor="White" />

        <Entry x:Name="UsernameEntry"
               Placeholder="Username" 
               BackgroundColor="White" />

        <Entry x:Name="PasswordEntry"
               Placeholder="Password"
               IsPassword="True"
               BackgroundColor="White"/>

        <Button Text="Save"
                Clicked="OnSaveClicked"/>

        <Button Text="Cancel"
                Clicked="OnCancelClicked"
                BackgroundColor="Gray"
                TextColor="White"/>
    </VerticalStackLayout>

</ContentPage>