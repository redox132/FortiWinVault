<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WinHashMe.Pages.Main.VaultPage"
             Title="My Vault">

    <Grid Padding="30"
          RowDefinitions="Auto,Auto,*"
          ColumnDefinitions="*">

        <!-- Header -->
        <HorizontalStackLayout Grid.Row="0"
                               Spacing="15"
                               VerticalOptions="Center">

            <Label Text="ðŸ” My Password Vault"
                   FontSize="24"
                   FontAttributes="Bold"
                   VerticalOptions="Center"/>

            <Button Text="+ Add"
                Clicked="OnAddClicked"
                HorizontalOptions="EndAndExpand"
                WidthRequest="100"
                HeightRequest="40"/>
        </HorizontalStackLayout>

        <!-- Search Bar -->
        <SearchBar Grid.Row="1"
                   Placeholder="Search passwords..."
                   Margin="0,15,0,15"/>
        
        <!-- Password List -->
        <CollectionView Grid.Row="2"
                ItemsSource="{Binding VaultItems}"
                SelectionMode="None">
            
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Padding="15"
                           Margin="0,0,0,10"
                           CornerRadius="10"
                           HasShadow="True">

                        <Grid ColumnDefinitions="Auto,*,Auto"
                              RowDefinitions="Auto,Auto"
                              ColumnSpacing="15">

                            <!-- Icon -->
                            <Label Text="ðŸŒ"
                                   FontSize="24"
                                   VerticalOptions="Center"
                                   Grid.RowSpan="2"/>

                            <!-- Website -->
                            <Label Text="{Binding Website}"
                                   FontSize="18"
                                   FontAttributes="Bold"
                                   Grid.Column="1"/>

                            <!-- Actions -->
                            <HorizontalStackLayout Grid.Column="2"
                                                   Spacing="8">

                                <Button Text="ðŸ‘"
                                        WidthRequest="40"
                                        HeightRequest="35"/>

                                <Button Text="âœ"
                                        WidthRequest="40"
                                        HeightRequest="35"
                                        Clicked="OnEditClicked"
                                        CommandParameter="{Binding .}"/>

                                <Button Text="ðŸ—‘"
                                        WidthRequest="40"
                                        HeightRequest="35"
                                        BackgroundColor="#FF4C4C"
                                        Clicked="OnDeleteClicked"
                                        CommandParameter="{Binding .}"
                                        TextColor="White"/>
                            </HorizontalStackLayout>

                            <!-- Username -->
                            <Label Text="{Binding Username}"
                                   FontSize="14"
                                   TextColor="Gray"
                                   Grid.Row="1"
                                   Grid.Column="1"/>

                        </Grid>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>

        </CollectionView>

    </Grid>

</ContentPage>